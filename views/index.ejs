<!-- index.ejs -->
<html>

<head>
    <title>Homepage</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css" />
</head>

<body>
    <main>
        <div class="window d-flex flex-column align-items-center justify-content-center">
            <% if (messages) { %>
                <%= messages.error %>
            <% } %>
            <% if (!locals.user) { %>
                <%-include('login-form'); %>
            <% } else { %>
                <h1>WELCOME BACK <%= user.username %></h1>
                <a href="/log-out">LOG OUT</a>
            <% } %>
            
        </div>
    </main>
</body>

</html>